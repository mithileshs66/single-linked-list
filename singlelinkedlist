#include <iostream>

using namespace std;
struct node
{ int data;
struct node * next;
};
struct node * head;

void   insertatany(int x)
{  int n;
   cout<<"Enter the position\n";
   cin>>n;
   
    struct node * q=head;
    struct node *p=(struct node* )malloc(sizeof(struct node));
  
    p->data=x;
    p->next=NULL;
for(int i=1;i<n;i++) 
{
    q=q->next;
    
}
    p->next=q->next;
    q->next=p;

}

void reverse()
{
    struct node* current=head;
    struct node* temp=head;
    struct node* prev=NULL;
    struct node* next;
    while(current!=NULL)
    {
        next=current->next;
        current->next=prev;
        prev=current;
        current=next;
    }
    head=prev;
    
         
}

void insert(int x )
{   struct node*temp=(struct node*)malloc(sizeof(struct node));
    
    if(head==NULL)
    {
       head=temp;
        temp->data=x;
        temp->next=NULL;
        return;
    }
    
        temp->data=x;
        temp->next=head;
        head=temp;
             
}
    
void traverse()
{   struct node* temp;
    temp=head;
    if(temp==NULL)
    {
        cout<<"Empty";
    }

     while(temp->next!=NULL)
            {
                cout<<temp->data<<"->";
                temp=temp->next;
            }
            cout<<temp->data;
}

void ldelete()
{  int temp;
   struct node* t;
    if(head==NULL)
    {
        cout<<"Empty";
    }

    else
    {
        temp=head->data;
        t=head->next;
        free(head);
        head=t;
    }
}
void llenght()
{
    struct node* temp=head;
    int count=0;
    while(temp!=NULL)
    {
        count++;
        temp=temp->next;
    }
    cout<<count;
}

int main()
{   int n;
    while(1)
{
    cout<<"\nEnter the value\n1.insert\n2.traverse\n3.delete\n4.lenght\n5.reverse\n6.insertatany\n";
    cin>>n;   
    switch(n)
    {   int x;
        case 1: cout<<"\nEnter the element\n";
                       cin>>x;
                       insert(x);
                       break;
        case 2: traverse(); 
                break;
        case 3: ldelete();
                break;
        case 4: llenght();
                break;   
        case 5:reverse();
               break;
        case 6:  cout<<"\nEnter the element\n";
                       cin>>x;
                       insertatany(x);
                       break;     
        case 7:exit(0);
               break;
        default:cout<<"wrong option";       
    }
    
}
return 0;
}
