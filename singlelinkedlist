#include <iostream>
#include<stdio.h>
#include<stdlib.h>
using namespace std;
struct node
{ int data;
struct node * next;
};
struct node * head=NULL;
void insert(int x);
void traverse();
void ldelete();

int main()
{   int n;
    while(1)
{
    cout<<"\nEnter the value\n1.insert\n2.traverse\n3.delete\n";
    cin>>n;   
    switch(n)
    {   int x;
        case 1: cout<<"\nEnter the element\n";
                       cin>>x;
                       insert(x);
                       break;
        case 2: traverse(); 
                break;
        case 3: ldelete();
                break;
        case 4:exit(0);
               break;
        default:cout<<"wrong option";       
    }
    
}
return 0;
}
void insert(int x )
{   struct node*temp=(struct node*)malloc(sizeof(struct node));
    
    if(head==NULL)
    {
       head=temp;
        temp->data=x;
        temp->next=NULL;
        return;
    }
    
        temp->data=x;
        temp->next=head;
        head=temp;
             
    
 

    
}
    
void traverse()
{   struct node* temp;
    temp=head;
    if(temp==NULL)
    {
        cout<<"Empty";
    }

     while(temp->next!=NULL)
            {
                cout<<temp->data<<"->";
                temp=temp->next;
            }
            cout<<temp->data;
}

void ldelete()
{  int temp;
   struct node* t;
    if(head==NULL)
    {
        cout<<"Empty";
    }

    else
    {
        temp=head->data;
        t=head->next;
        free(head);
        head=t;
    }
}
